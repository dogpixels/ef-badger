{
	"manifest_version": 3,
	"name": "Eurofurence Badger",
	"version": "1.1.0",
	"description": "Enhances your visit to the Eurofurence website by adding 'new' badges to pages that have been updated since you last viewed them.",
    "icons": {
		"16": "img/16.png",
		"32": "img/32.png",
		"48": "img/48.png",
		"64": "img/64.png",
		"128": "img/128.png",
		"192": "img/192.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.eurofurence.org/*",
				"https://wwwtest.eurofurence.org/*"
			],
			"js": ["js/www.eurofurence.org.js"]
		}
	],
	"permissions": [
		"storage"
	],
    "host_permissions": [
		"https://*.eurofurence.org/*"
    ]
}